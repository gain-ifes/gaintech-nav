<launch>
  <!--- Run AMCL -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find gain_raspi)/param/local_costmap_params.yaml" command="load" />

    <rosparam file="$(find gain_raspi)/param/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find gain_raspi)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />

    <rosparam file="$(find gain_raspi)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find gain_raspi)/param/base_local_planner_params.yaml" command="load" />

  </node>
</launch>
